<!DOCTYPE html>
<html>
  <head>
    <title>SpeechLinks</title>
    <%= csrf_meta_tags %>
    <!-- meta charec set -->
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="body">
    <header id="navigation" class="navbar">
      <div class="container">
        <div class="navbar-header">
          <!-- responsive nav button -->
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <i class="fa fa-bars fa-2x"></i>
            </button>
          <!-- /responsive nav button -->

          <!-- logo -->
          <%= link_to user_speeches_path do %>
            <h1 style="color: #fff;">Speech Links</h1> 
          <% end %>
          <!-- /logo -->
        </div>

        <!-- main nav -->
        <nav class="collapse navbar-collapse navbar-right" role="navigation">
          <ul id="nav" class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to "スピーチ一覧", user_speeches_path %></li>
              <li><%= link_to "ユーザー一覧", users_path %></li>
              <li><%= link_to "スピーチを書く", new_user_speech_path %></li>
              <li><%= link_to current_user.name, user_path(current_user) %></li>
            <% end %>
          </ul>
        </nav>
        <!-- /main nav -->  
      </div>
    </header>  
    <div class="container">
      <% if flash[:notice].present? %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div> 
      <% end %>
      <% if flash[:alert].present? %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>  
      <% end %>
      <%= yield %>
    </div>
    <script>
			var wow = new WOW ({
				boxClass:     'wow',      // animated element css class (default is wow)
				animateClass: 'animated', // animation css class (default is animated)
				offset:       120,          // distance to the element when triggering the animation (default is 0)
				mobile:       false,       // trigger animations on mobile devices (default is true)
				live:         true        // act on asynchronously loaded content (default is true)
			  }
			);
			wow.init();
		</script> 
  </body>
</html>
