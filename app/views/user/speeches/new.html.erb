<h1>スピーチを登録</h1>
<div class="panel">
  <%= render partial: "shared/error_message", locals: { model: @speech } %>
  <%= form_for [:user, @speech] do |f| %>
    <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
    <%= f.text_area :content, class: "form-control", placeholder: "本文を書いてください", rows: 50 %>
    <%= f.submit "スピーチを登録！", class: "btn btn-primary" %>
  <% end %>
</div>