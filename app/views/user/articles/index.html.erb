<div class="container">
  <h1>新着記事一覧</h1>
  <table class="table table-striped table-hover">
    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= link_to(user_article_path(article)) do %>
            <%= article.title %>
          <% end %>
        </td>
        <td><%= article.created_at %></td>
      </tr>
    <% end %>
  </table>  
</div>
