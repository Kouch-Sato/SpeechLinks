<div class="panel panel-default">
  <div class="panel-heading">
    <h2>プロフィール編集</h2>
  </div>
  <div class="panel-body">
    <%= render partial: "shared/error_message", locals: { model: @user } %>
    <%= form_for @user do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Kouch Sato" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", placeholder: "speech@example.com" %>
      </div>

      <div class="field">
        <%= f.label :bio, "プロフィール欄" %><br />
        <%= f.text_field :bio, class: "form-control", placeholder: "UTESSのOBです。エクステンポと後輩を愛しています。" %>
      </div>

      <div class="field">
        <%= f.label :university %><br />
        <%= f.select :university, User.universities.keys, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :grade, "ESSでの学年" %><br />
        <%= f.select :grade, [["1", 1], ["2", 2], ["3",3], ["4", 4]], class: "form-control" %>
      </div>
      <br/>
      <%= f.submit "更新", class: "btn btn-primary", style: "width: 100%;" %>
    <% end %>
  </div>
</div>


