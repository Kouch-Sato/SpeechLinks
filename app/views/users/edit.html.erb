<h1>プロフィールを編集する</h1>
<%= render partial: "shared/error_message", locals: { model: @user } %>
<%= form_for @user do |f| %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.submit "更新", class: "btn btn-primary" %>
<% end %>
<%= link_to "戻る", user_path(@user) %>