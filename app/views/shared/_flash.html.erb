<% if user_signed_in? && current_user.image.file.nil? %>
  <div class="alert alert-info alert-dismissible">
    <div class="container">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      ご自身のプロフィール画像を<%= link_to "こちら", edit_user_path(current_user) %>から設定してみましょう。
    </div>
  </div>
<% end %>

<% if user_signed_in? && current_user.speeches.empty? %>
  <div class="alert alert-info alert-dismissible">
    <div class="container">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      ご自身のスピーチも<%= link_to "こちら", new_user_speech_path %>から登録してみませんか？
    </div>
  </div>
<% end %>

<% if flash[:notice].present? %>
  <div class="alert alert-success alert-dismissible">
    <div class="container">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<% if flash[:alert].present? %>
  <div class="alert alert-danger alert-dismissible">
    <div class="container">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>